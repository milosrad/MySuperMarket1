<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    android:background="@color/colorwhite"
    >

    <!--TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        card_view:contentPadding="7dp"

        /-->

    <RelativeLayout
        android:id="@+id/relativelayoutimage"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/colorwhite"
        >


        <ImageView
            android:id="@+id/productimage"
            android:layout_width="87.5dp"
            android:layout_height="87.5dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="25.5dp"
            android:layout_marginBottom="9.5dp"
            android:layout_marginRight="25.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="119dp"
        android:background="@color/colorwhite"
        >


        <com.example.user.mysupermarket.TextViewFont
            android:id="@+id/producttitle"
            android:layout_width="51.5dp"
            android:layout_height="12.5dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="19.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"
            android:textSize="8dp"/>

        <com.example.user.mysupermarket.TextViewFont
            android:id="@+id/productprice2"
            android:layout_width="22.5dp"
            android:layout_height="12.5dp"
            android:inputType="number"
            android:textColor="@color/colorblack"

            android:textSize="8dp"
            android:layout_alignBottom="@+id/productbuylayout"
            android:layout_alignLeft="@+id/producttitle"
            android:layout_alignStart="@+id/producttitle" />

        <RelativeLayout
            android:id="@+id/productbuylayout"
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
            android:background="@color/colorYellowLogin"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="9.5dp"
            
            >
            
            <ImageView
                android:id="@+id/blackplusimage"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_marginLeft="2.8dp"
                android:src="@mipmap/addplus"
                android:layout_marginBottom="15.4dp"
                android:layout_marginTop="1dp"
                />


            <ImageView
            android:id="@+id/iconshop"
            android:layout_width="9dp"
            android:layout_height="10.4dp"
            android:src="@mipmap/shopping"
            android:background="@color/colorYellowLogin"
            android:layout_marginBottom="5.4dp"
            android:layout_marginLeft="9.7dp"
            android:layout_marginTop="7.7dp"

            />

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>