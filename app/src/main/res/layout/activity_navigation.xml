<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:layout_marginLeft="302dp"
            >


            <ImageView
                android:id="@+id/navigationiconmenu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu"
                android:visibility="visible"

                />

            <ImageView
                android:id="@+id/navigationiconbirthday"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="39dp"

                android:src="@mipmap/birthday"
                android:visibility="visible"


                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/navigationicondining"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="99dp"

                android:src="@mipmap/birthday"
                android:visibility="visible"


                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/navigationiconmessaging"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="159dp"

                android:src="@mipmap/birthday"
                android:visibility="visible"


                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/navigationiconwhatever"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="219dp"

                android:src="@mipmap/birthday"
                android:visibility="visible"


                android:layout_gravity="center" />


        </FrameLayout>



</LinearLayout>

    <!-- The navigation drawer -->
    <!--ListView android:id="@+id/listViewNavigation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/-->

    <ExpandableListView
        android:id="@+id/expListViewNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff">

    </ExpandableListView>
</android.support.v4.widget.DrawerLayout>