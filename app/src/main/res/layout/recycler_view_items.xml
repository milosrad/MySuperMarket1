<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="138.5dp"
    android:layout_height="160dp"
    card_view:cardElevation="7dp"
    card_view:contentPadding="7dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardMaxElevation="7dp"
    android:background="@color/colorwhite"
    >

    <!--TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        /-->

    <RelativeLayout
        android:id="@+id/relativelayoutimage"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/colorwhite"
        >


        <ImageView
            android:id="@+id/productimage"
            android:layout_width="87.5dp"
            android:layout_height="87.5dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="25.5dp"
            android:layout_marginBottom="9.5dp"
            android:layout_marginRight="25.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="119dp"
        android:background="@color/colorwhite"
        >


        <com.example.user.mysupermarket.custom_component.TextViewFont
            android:id="@+id/producttitle"
            android:layout_width="51.5dp"
            android:layout_height="12.5dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="19.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"/>

        <com.example.user.mysupermarket.custom_component.TextViewFont
            android:id="@+id/productprice"
            android:layout_width="22.5dp"
            android:layout_height="12.5dp"
            android:inputType="number"
            android:textColor="@color/colorblack"
            android:layout_below="@+id/producttitle"/>

        <ImageView
            android:id="@+id/productbuyimage"
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
           android:background="@color/colorYellowLogin"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="109dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="9.5dp"
            android:src="@mipmap/shopping"
            />



    </RelativeLayout>
</android.support.v7.widget.CardView>